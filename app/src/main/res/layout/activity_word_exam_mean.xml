<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Word_Exam_Mean">
    //뜻맞추기

    <!-- 위에 단계 표시 툴바 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorButtonAndBar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어 시험 - 뜻"
            android:fontFamily="@font/binggrae"
            android:textColor="@color/colorBarTitle"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="20sp"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/half_opacity_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exam_tv0"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="TextView"
                android:gravity="center"/>

            <TextView
                android:id="@+id/exam_tv1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="TextView"
                android:gravity="center"/>

            <TextView
                android:id="@+id/exam_tv2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="TextView"
                android:gravity="center"/>

            <TextView
                android:id="@+id/exam_tv3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/exam_tv4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="TextView"
                android:gravity="center"/>

            <TextView
                android:id="@+id/exam_tv5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="TextView"
                android:gravity="center"/>

            <TextView
                android:id="@+id/exam_tv6"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="TextView"
                android:gravity="center"/>

            <TextView
                android:id="@+id/exam_tv7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="TextView"
                android:gravity="center"/>

            <TextView
                android:id="@+id/exam_tv8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="TextView"
                android:gravity="center"/>

            <TextView
                android:id="@+id/exam_tv9"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/exam_mean_answer0"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <EditText
                android:id="@+id/exam_mean_answer1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                />

            <EditText
                android:id="@+id/exam_mean_answer2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                />

            <EditText
                android:id="@+id/exam_mean_answer3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                />

            <EditText
                android:id="@+id/exam_mean_answer4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                />

            <EditText
                android:id="@+id/exam_mean_answer5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                />

            <EditText
                android:id="@+id/exam_mean_answer6"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                />

            <EditText
                android:id="@+id/exam_mean_answer7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                />

            <EditText
                android:id="@+id/exam_mean_answer8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                />

            <EditText
                android:id="@+id/exam_mean_answer9"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/exam_submit_mean"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded"
        android:textColor="#FFFFFF"
        android:textSize="10pt"
        android:textStyle="bold"
        android:fontFamily="@font/binggrae"
        android:text="제출" />

</LinearLayout>